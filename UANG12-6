    <!-- MODAL EDIT ADMIN (MANA ALTER) -->
    <div id="edit-debt-modal" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4 bg-black/80 backdrop-blur-md">
        <div class="magic-card w-full max-w-sm p-8 rounded-3xl border-2 border-yellow-500/50 shadow-[0_0_50px_rgba(251,191,36,0.2)]">
            <h3 class="magic-font text-2xl font-bold text-yellow-400 mb-2">Ubah Takdir Mana</h3>
            <p id="edit-target-name" class="text-sm text-indigo-200 mb-6 italic"></p>
            <div class="space-y-6">
                <div>
                    <label class="block text-[10px] font-bold text-indigo-300 mb-2 uppercase tracking-widest">Kapasitas Baru</label>
                    <input type="number" id="edit-amount-input" class="magic-input w-full p-4 rounded-xl font-bold text-xl text-yellow-400" placeholder="Rp">
                </div>
                <div class="flex gap-3">
                    <button onclick="closeEditModal()" class="flex-1 bg-white/5 hover:bg-white/10 py-4 rounded-xl font-bold text-indigo-200 transition">Batal</button>
                    <button onclick="saveDebtEdit()" class="flex-1 magic-button text-white py-4 rounded-xl font-bold">Simpan</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL LIHAT BUKTI -->
    <div id="view-modal" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4 bg-black/80 backdrop-blur-md">
        <div class="magic-card w-full max-w-md overflow-hidden rounded-3xl">
            <div class="p-6 border-b border-white/10 flex justify-between items-center bg-indigo-950/50">
                <div class="flex flex-col">
                    <h3 id="view-title" class="magic-font font-bold text-white text-lg">Segel Bukti</h3>
