    <div id="toast" class="fixed bottom-8 right-8 z-50 translate-y-32 transition-transform bg-yellow-500 text-indigo-950 px-8 py-4 rounded-2xl font-black text-xs uppercase tracking-widest shadow-2xl"></div>

    <script>
        // Data Sama seperti sebelumnya
        const initialData = {
            "01": 60000, "02": 50000, "03": 60000, "04": 60000, "05": 0, "06": 100000, "07": 60000, "08": 0, "09": 95000, "10": 45000,
            "11": 0, "12": 60000, "13": 60000, "14": 75000, "15": 55000, "16": 30000, "17": 35000, "18": 100000, "19": 40000, "20": 40000,
            "21": 0, "22": 60000, "23": 50000, "24": 60000, "25": 0, "26": 45000, "27": 60000, "28": 25000, "29": 45000, "30": 60000,
            "31": 0, "32": 0, "33": 115000, "34": 35000, "35": 100000, "36": 60000
        };

        let dbUsers = [];
        for (let i = 1; i <= 36; i++) {
            let id = i.toString().padStart(2, '0');
            dbUsers.push({
                id: id,
                nama: i === 25 ? "Muggle-Born Mutia (Admin)" : "Mage Siswa " + i,
                peran: i === 25 ? "admin" : "siswa",
                tagihan: initialData[id],
                isAccepted: false
            });
        }

        let dbTransactions = [];
        let totalKas = 540000;
        let currentUser = null;
        let editTargetId = null;

        function togglePasswordField() {
            const id = document.getElementById('id-input').value.padStart(2, '0');
            document.getElementById('password-container').classList.toggle('hidden', id !== '25');
        }

        function toggleAccountInfo() {
            const method = document.getElementById('up-method').value;
            const info = document.getElementById('account-info');
            info.classList.toggle('hidden', method !== 'Transfer');
        }

        function handleLogin() {
            const idInput = document.getElementById('id-input').value.padStart(2, '0');
            const user = dbUsers.find(u => u.id === idInput);
            if (!user) return alert("Sinyal Sihir Tidak Dikenali!");
            if (idInput === '25' && document.getElementById('password-input').value !== 'mutiamei07') return alert("Mantra Salah!");

            currentUser = user;
            document.getElementById('login-screen').classList.add('hidden');
            document.getElementById('app-content').classList.remove('hidden');
            renderUI();
        }

        function handleLogout() { location.reload(); }

        function renderUI() {
            document.getElementById('user-name').innerText = currentUser.nama;
            document.getElementById('user-role').innerText = currentUser.peran === 'admin' ? "Master Sorcerer" : "Apprentice Mage";
            
            if(currentUser.peran === 'siswa') {
                document.getElementById('notif-accepted').classList.toggle('hidden', !currentUser.isAccepted);
                document.getElementById('admin-stats').classList.add('hidden');
                document.getElementById('admin-debts-section').classList.add('hidden');
                document.getElementById('th-aksi').classList.add('hidden');
                document.getElementById('siswa-upload-section').classList.remove('hidden');
            } else {
                document.getElementById('notif-accepted').classList.add('hidden');
                document.getElementById('admin-stats').classList.remove('hidden');
                document.getElementById('admin-debts-section').classList.remove('hidden');
                document.getElementById('th-aksi').classList.remove('hidden');
                document.getElementById('siswa-upload-section').classList.add('hidden');
            }

            updateStats();
            renderDebts();
            renderTransactions();
            refreshIcons();
        }

        function updateStats() {
            if(currentUser.peran === 'admin') {
                let totalPiutang = dbUsers.reduce((s, u) => s + u.tagihan, 0);
                document.getElementById('stat-total-masuk').innerText = formatIDR(totalKas);
                document.getElementById('stat-saldo').innerText = formatIDR(totalKas);
                document.getElementById('stat-piutang').innerText = formatIDR(totalPiutang);
            }

            document.getElementById('my-debt-amount').innerText = formatIDR(currentUser.tagihan);
            const status = document.getElementById('status-container');
            if(currentUser.tagihan > 0) {
                status.innerText = "Belum Terkumpul";
                status.className = "text-center p-3 rounded-xl font-black text-[11px] uppercase tracking-[0.3em] bg-rose-500/10 text-rose-400 border-rose-500/30";
            } else {
                status.innerText = "Energi Penuh";
                status.className = "text-center p-3 rounded-xl font-black text-[11px] uppercase tracking-[0.3em] bg-emerald-500/10 text-emerald-400 border-emerald-500/30";
            }
        }

        function renderDebts() {
            if(currentUser.peran !== 'admin') return;
            const grid = document.getElementById('debt-list-grid');
            const sortVal = document.getElementById('debt-sort-filter').value;
            grid.innerHTML = '';
            
            let sortedUsers = [...dbUsers];

            if (sortVal === 'tertinggi') {
                sortedUsers.sort((a, b) => b.tagihan - a.tagihan);
            } else if (sortVal === 'terendah') {
                sortedUsers.sort((a, b) => a.tagihan - b.tagihan);
            } else {
                sortedUsers.sort((a, b) => parseInt(a.id) - parseInt(b.id));
            }

            sortedUsers.forEach(u => {
                grid.innerHTML += `
                    <div onclick="openEditModal('${u.id}')" class="p-4 border border-white/5 hover:border-yellow-500/50 rounded-2xl text-center cursor-pointer transition-all duration-300 group ${u.tagihan === 0 ? 'bg-emerald-500/5 opacity-80' : 'bg-white/5'}">
                        <div class="text-[9px] text-indigo-400 font-bold uppercase group-hover:text-yellow-400 transition tracking-tighter">Mage ID ${u.id}</div>
                        <div class="text-xs font-bold truncate text-white">${u.nama}</div>
                        <div class="text-[10px] font-bold mt-1 ${u.tagihan === 0 ? 'text-emerald-400' : 'text-rose-400'}">
                            ${u.tagihan === 0 ? 'TERCUKUPI' : formatIDR(u.tagihan)}
                        </div>
                    </div>
                `;
            });
            refreshIcons();
        }

        function openEditModal(id) {
            if(currentUser.peran !== 'admin') return;
            editTargetId = id;
            const user = dbUsers.find(u => u.id === id);
            document.getElementById('edit-target-name').innerText = `Merubah kapasitas ${user.nama}`;
            document.getElementById('edit-amount-input').value = user.tagihan;
            document.getElementById('edit-debt-modal').classList.remove('hidden');
        }

        function closeEditModal() { document.getElementById('edit-debt-modal').classList.add('hidden'); }

        function saveDebtEdit() {
            const newAmt = parseInt(document.getElementById('edit-amount-input').value);
            const user = dbUsers.find(u => u.id === editTargetId);
            if(user) {
                user.tagihan = isNaN(newAmt) || newAmt < 0 ? 0 : newAmt;
                showToast("Mantra Perubahan Selesai!");
                closeEditModal();
                renderUI();
            }
        }

        function renderTransactions() {
            const tbody = document.getElementById('transaction-tbody');
            tbody.innerHTML = '';
            [...dbTransactions].reverse().forEach((tx, idx) => {
                const realIdx = dbTransactions.length - 1 - idx;
                let statusColor = tx.status === 'Lunas' ? "text-emerald-400 border-emerald-400/30" : (tx.status === 'Ditolak' ? "text-rose-400 border-rose-400/30" : "text-indigo-300 border-white/10");
                
                tbody.innerHTML += `
                    <tr class="hover:bg-white/5 transition">
                        <td class="py-4 text-[10px] text-indigo-400">${tx.time}</td>
                        <td class="py-4 font-bold text-white">${tx.nama}</td>
                        <td class="py-4"><span class="text-[9px] font-black text-indigo-200 border border-white/10 px-2 py-0.5 rounded-full uppercase">${tx.method || 'Cash'}</span></td>
                        <td class="py-4 font-bold text-yellow-400">${formatIDR(tx.amount)}</td>
                        <td class="py-4 text-center">
                            ${tx.image ? `<button onclick="openViewModal(${realIdx})" class="p-2 bg-indigo-500/20 text-indigo-300 rounded-lg border border-indigo-500/30 hover:bg-indigo-500/40"><i data-lucide="eye" class="w-4 h-4"></i></button>` : '-'}
                        </td>
                        <td class="py-4"><span class="px-2 py-0.5 rounded-full text-[8px] font-black border uppercase tracking-widest ${statusColor}">${tx.status}</span></td>
                        ${currentUser.peran === 'admin' ? `
                            <td class="py-4">
                                ${tx.status === 'Pending' ? `
                                    <div class="flex gap-2">
                                        <button onclick="adminVerify(${realIdx})" class="p-1.5 bg-emerald-500/20 text-emerald-400 border border-emerald-500/30 rounded-lg hover:bg-emerald-500/40"><i data-lucide="check" class="w-4 h-4"></i></button>
                                        <button onclick="adminReject(${realIdx})" class="p-1.5 bg-rose-500/20 text-rose-400 border border-rose-500/30 rounded-lg hover:bg-rose-500/40"><i data-lucide="x" class="w-4 h-4"></i></button>
                                    </div>
                                ` : '-'}
                            </td>
                        ` : ''}
                    </tr>
                `;
            });
            refreshIcons();
        }

        function handleUpload() {
            const amt = parseInt(document.getElementById('up-amount').value);
            const method = document.getElementById('up-method').value;
            const imgFile = document.getElementById('up-image').files[0];
            
            if(!amt || amt <= 0) return alert("Jumlah energi tidak boleh kosong!");
            if(!imgFile) return alert("Harus ada segel bukti foto!");

            const reader = new FileReader();
            reader.readAsDataURL(imgFile);
            reader.onload = function () {
                dbTransactions.push({
                    id: currentUser.id,
                    nama: currentUser.nama,
                    amount: amt,
                    method: method,
                    image: reader.result,
                    time: new Date().toLocaleTimeString('id-ID', {hour:'2-digit', minute:'2-digit'}),
                    status: "Pending"
                });
                currentUser.isAccepted = false;
                alert("Mantra dikirim! Menunggu persetujuan Master Sorcerer.");
                document.getElementById('up-amount').value = '';
                document.getElementById('up-image').value = '';
                renderUI();
            };
        }

        function openViewModal(idx) {
            const tx = dbTransactions[idx];
            document.getElementById('view-modal').classList.remove('hidden');
            document.getElementById('view-img').src = tx.image;
            document.getElementById('view-subtitle').innerText = `Media: ${tx.method}`;
            
            const actions = document.getElementById('view-actions');
            actions.innerHTML = '';
            if(currentUser.peran === 'admin' && tx.status === 'Pending') {
                actions.innerHTML = `
                    <button onclick="closeViewModal(); adminReject(${idx})" class="flex-1 bg-white/5 py-4 rounded-2xl font-bold text-indigo-300">Tolak Segel</button>
                    <button onclick="closeViewModal(); adminVerify(${idx})" class="flex-1 magic-button text-white py-4 rounded-2xl font-bold">Terima Energi</button>
                `;
            } else {
                actions.innerHTML = `<button onclick="closeViewModal()" class="w-full bg-white/5 text-white py-4 rounded-2xl font-bold">Tutup Portal</button>`;
            }
            refreshIcons();
        }

        function closeViewModal() { document.getElementById('view-modal').classList.add('hidden'); }

        function adminVerify(txIdx) {
            const tx = dbTransactions[txIdx];
            tx.status = "Lunas";
            const uIdx = dbUsers.findIndex(u => u.id === tx.id);
            if(uIdx !== -1) {
                dbUsers[uIdx].tagihan = Math.max(0, dbUsers[uIdx].tagihan - tx.amount);
                dbUsers[uIdx].isAccepted = true;
            }
            totalKas += tx.amount;
            renderUI();
            showToast("Energi Berhasil Diserap!");
        }

        function adminReject(txIdx) {
            dbTransactions[txIdx].status = "Ditolak";
            renderUI();
            showToast("Mantra Dibatalkan!");
        }

        function dismissNotif(type) {
            currentUser[type] = false;
            renderUI();
        }

        function formatIDR(n) { return "Rp " + n.toLocaleString('id-ID'); }
        function refreshIcons() { if(typeof lucide !== 'undefined') lucide.createIcons(); }
        function showToast(m) {
            const t = document.getElementById('toast');
            t.innerText = m;
            t.classList.remove('translate-y-32');
            setTimeout(() => t.classList.add('translate-y-32'), 3000);
        }

        window.onload = refreshIcons;
    </script>
</body>
</html>

